 <p id="notice"><%= flash[:notice] %></p> 

<div class="container px-5 px-sm-0">
  <div class="row">
 
 <%= render 'books/list', books: @books %>
 
 <div class="col-md-8 offset-md-1">
     <h2>Users</h2>
     
     <table class="table table-hover table-inverse">
       <thead>
            <tr>
                <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
      
         <tbody>
           <tr>
            <% @users.each do |user| %>
            <th><%= image_tag @user.get_profile_image(100,100) %></th>
             <td>
             <%= user.name %>
             </td>
             <td><%= link_to "Show" , user_path(@user)  %>
            </td>

            </tr>
            <% end %>
           </tbody>

        </table>

     
     
 </div>
 
 </div>
 </div>
 