<p id="notice"><%= flash[:notice] %></p> 
<div class="container px-5 px-sm-0">
  <div class="row">
     
      <%= render 'list', post_images: @books %>
      
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
         <tbody>
           <tr>
            
            <td><%= image_tag @book.user.get_profile_image(100,100) %>
            <br><%= link_to user_path do %><%= @book.user.name %><% end %></td>
        
         
             <td>
             <%= @book.title %>
             </td>

             <td><%= @book.body %></td>

             <% if @book.user == current_user %>
             <td><%= link_to(edit_book_path(@book.id), class: 'btn btn-success') do %>Edit
            <% end %></td>
             <td><%= link_to(book_path(@book.id),method: :delete, "data-confirm" => "Are you sure?" ,class: 'btn btn-danger') do %>Destroy
            <% end %></td>
            <% end %>
             </tr>
            
           </tbody>

        </table>

      </div>
      

  </div>
</div>